{
  "layer": "top",
  "position": "top",
  "modules-left": ["hyprland/workspaces", "layout"],
  "modules-center": ["clock"],
  "modules-right": ["cpu", "memory", "temperature", "tray", "backlight", "pulseaudio"],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "vivaldi",
      "2": "develop",
      "3": "message",
      "4": "notepad",
      "10": "windows",
      "active": "ðŸ¤ª",
      "default": "++"
    }
  },
  "layout": {
    "format": "{layout}",
    "exec": "hyprctl getlayout"
  },
  "clock": {
    "format": "{:%Y-%m-%d %H:%M}",
    "tooltip": false
  },
  "cpu": {
    "format": "{usage}%",
    "tooltip-format": "CPU Usage: {usage}%"
  },
  "memory": {
    "format": "ï‹› {used} / {total} GB",
    "tooltip-format": "Memory: {used} / {total} GB"
  },
  "temperature": {
    "format": "ï‹‡ {temperature}Â°C",
    "exec": "sensors | grep 'Package id 0:' | awk '{print $4}'"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 15
  },
  "backlight": {
    "format": "ï†… {percent}%",
    "device": "intel_backlight"
  },
  "pulseaudio": {
    "format": "ï€¨ {volume}%"
  }
}
